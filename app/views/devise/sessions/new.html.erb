<div class="row">
  <div class="col-xs-12 col-md-5 mx-auto">
    <h2><%= t('.sign_in') %></h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <%= f.label :document %><br />
        <%= f.telephone_field :document, autofocus: true, autocomplete: "document", class: 'form-control', pattern: '[0-9]*'%>
      </div>

      <div class="" data-wrapper='sign-in'>

      </div>


      <div class="actions">
        <%= f.button icon_text('user', t('.sign_in')), class: 'btn btn-primary' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
